.container
  %header.nav.navbar
    .navbar-header
      = image_tag "logo.png", style: "height: 30px"
    %nav
      %ul.nav.navbar-nav.pull-right
        %li
          = link_to "录入配件", new_dashboard_accessory_path, data: { 'no-turbolinks': true }
        %li
          = link_to "我的配件", dashboard_accessories_path, data: { 'no-turbolinks': true }
        %li
          = link_to "搜索配件", new_dashboard_accessory_path, data: { 'no-turbolinks': true }
        - if user_signed_in?
          %li
            = link_to "退出登录", session_path, method: :delete
          %li
            - if params[:controller] == "welcome"
              = link_to "我的后台", dashboard_path, data: { 'no-turbolinks': true }
            - else
              = link_to "回到首页", root_path

        - else
          %li
            = link_to "登录", new_session_path, data: { 'no_turbolink': true }
          %li
            = link_to "注册", new_registration_path, data: { 'no_turbolink': true }
