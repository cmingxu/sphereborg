%p.form-logo.text-center
  = image_tag asset_path('logo.png'), width: 200
%p.form-desc.text-center
  = Setting.description
= form_tag(session_path, class: "form") do |f|
  .input-top.input-session
    = text_field_tag :mobile, params[:mobile], autofocus: true, placeholder: "请输入手机号码"
  .input-bottom.input-session
    = password_field_tag :password,params[:password], autocomplete: "off", placeholder: "请输入密码"

  .row.action-row
    .col-md-6
      = submit_tag "登录", class: "btn btn-primary btn pull-left"
    .col-md-6.text-right.registration-link
      %span 没有账号?，
      %span
        = link_to "我要注册", new_registration_path
