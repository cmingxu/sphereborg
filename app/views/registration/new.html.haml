%p.form-logo.text-center
  = image_tag asset_path('logo.png'), width: 200
%p.form-desc.text-center
  = Setting.description

= form_for(@user, url: registration_path, class: 'form') do |f|
  .input-top.input-session
    = f.text_field :mobile, autofocus: true, placeholder: "请输入手机号码"
  .input-session.input-middle
    = f.password_field :password, autocomplete: "off", placeholder: "输入密码"
  .input-bottom.input-session
    = f.password_field :password_confirmation, autocomplete: "off", placeholder: "再次输入密码"
  .row.action-row
    .col-md-6
      = f.submit "注册", class: 'btn btn-primary btn-primary'
    .col-md-6.text-right.registration-link
      %span 我已经注册过，
      %span
        = link_to "现在登录", new_session_path
