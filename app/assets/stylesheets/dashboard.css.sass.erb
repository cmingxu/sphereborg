@import 'c3'
@import "bootstrap-sprockets"
@import "bootstrap"
@import "bootstrap-select/dist/css/bootstrap-select"


$light-green: #79da3a
.sidebar
  position: absolute
  top: 51px
  bottom: 0
  left: 0
  z-index: 1000
  display: block
  padding: 20px
  background-color: #f5f5f5
  border-right: 1px solid #eee
  width: 120px

.dashboard
  position: relative

.nav-sidebar
  margin-right: -21px
  margin-bottom: 20px
  margin-left: -20px

.main_content
  padding-top: 60px
  padding-left: 110px
  background-color: white


.tag_label
  font-size: 16px
  margin: 10px

.tag_content
  padding-top: 20px

.label_bg
  padding-top: 10px
  padding-bottom: 10px
  border: 1px dashed black

.categories_list
  height: 800px
  overflow-y: scroll

  .active
    a
      color: white!important

  li
    padding: 0px
    .operation_panel
      display: none
      position: absolute
      bottom: 0px
      right: -20px
      a
        font-size: 0.8em
        width: 20%

    &:hover
      .operation_panel
        display: block
  a
    padding: 10px 15px
    width: 100%
    display: inline-block
    &:hover
      background-color: lighten(gray, 30%)
      color: white
  label
    padding: 10px 15px
    width: 100%
    display: inline-block



.add_category_label
  padding-left: 40px
  padding-right: 40px
  cursor: pointer

  cursor: hand

.categories
  .well
    padding: 0x

.accessories
  .label_condition
    padding: 5px 10px
    font-size: 1em
    font-weight: normal
    border: 1px dashed $light-green

    .remove_condtion_value
      display: none
  .active_label_condition
    background-color: $light-green
    .remove_condtion_value
      display: inline-block
      cursor: pointer
      cursor: hand

.grouped_condition_values_table
  font-size: 0.8em
